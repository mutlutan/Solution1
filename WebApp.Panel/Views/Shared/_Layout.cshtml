<!DOCTYPE html>
<html lang="en">
<head>
	<!-- App Version : @ViewBag.Version -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>@ViewBag.Title</title>

	@*bootstrap CSS*@
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

	@if (ViewBag.ControllerName != "Account")
	{
		@*kendo css - thema*@
		<link href="https://kendo.cdn.telerik.com/themes/6.4.0/bootstrap/bootstrap-main.css" rel="stylesheet" />
		<link rel="stylesheet" href="~/assets/css/kendo-customize.css" asp-append-version="true" />
	}

	<link rel="stylesheet" href="~/assets/css/site.css" asp-append-version="true" />

	<script>
		window.myApp = {};
		window.myApp.version = "1.0";

		document.addEventListener("DOMContentLoaded", function () {
			mnLang.prepare("@ViewBag.Culture");
			mnUser.prepare();
			mnApp.prepare();
			mnApp.setKendoDefaults("@ViewBag.Culture");

			if (typeof mnNotification !== 'undefined') {
				mnNotification.prepare({ autoHideAfter: 3500 });
			}

			if (mnUser.Info.IsAuthenticated) {
				mnYetkiSablon.prepare();
				mnLookup.prepare();
			}
		});

		window.addEventListener('load', function () {

			//window).resize
			setTimeout(function () {
				$(window).resize();
			});

			if (!window.location.host.startsWith("localhost")) {
				console.clear();
			}

		});

		function mapCallback() {
			//console.log("google maps api loaded.");
		}
	</script>
	
</head>
<body>
	@RenderBody()

	@*jquery JS*@
	<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

	@*Bootstrap JS (mnTreeMenu de kullanıldı)*@
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

	@*sweetalert2*@
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	@if (ViewBag.ControllerName != "Account")
	{
		@*kendo js*@
		<script src="https://kendo.cdn.telerik.com/2023.2.606/js/kendo.all.min.js"></script>
		<script src="@Url.Content("https://kendo.cdn.telerik.com/2023.2.606/js/messages/kendo.messages." + ViewBag.Culture + ".min.js")"></script>
		<script src="@Url.Content("https://kendo.cdn.telerik.com/2023.2.606/js/cultures/kendo.culture." + ViewBag.Culture + ".min.js")"></script>

		@*jszip*@
		<script src="//cdnjs.cloudflare.com/ajax/libs/jszip/2.4.0/jszip.min.js"></script>
	}

	@*js*@
	<script src="~/assets/js/site.js" asp-append-version="true"></script>

	@*mn*@
	<script src="~/assets/js/mnAlert.js" asp-append-version="true"></script>
	<script src="~/assets/js/mnLang.js" asp-append-version="true"></script>
	<script src="~/assets/js/mnLibs.js" asp-append-version="true"></script>
	<script src="~/assets/js/mnLookup.js" asp-append-version="true"></script>

	@if (ViewBag.ControllerName != "Account")
	{
		<script src="~/assets/js/mnNotification.js" asp-append-version="true"></script>
		<script src="~/assets/js/mnPageView.js" asp-append-version="true"></script>
		<script src="~/assets/js/mnPopupView.js" asp-append-version="true"></script>
		<script src="~/assets/js/mnScrollUp.js" asp-append-version="true"></script>
		<script src="~/assets/js/mnSideBarMenu.js" asp-append-version="true"></script>
		<script src="~/assets/js/mnYetkiSablon.js" asp-append-version="true"></script>
	}

	@if (ViewBag.ControllerName != "Account")
	{
		@*components*@
		<script src="~/client/components/comp-google-map/comp-google-map.js" asp-append-version="true"></script>

		@* en Son Bu olacak*@
		<script async src="https://maps.google.com/maps/api/js?libraries=drawing&key=@ViewBag.GoogleMapApiKey&callback=mapCallback" defer></script>
	}


</body>
</html>
