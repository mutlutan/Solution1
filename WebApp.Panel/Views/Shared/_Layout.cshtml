<!DOCTYPE html>
<html lang="en">
<head>
	<!-- App Version : @ViewBag.Version -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>@ViewBag.Title</title>

	@*bootstrap CSS*@
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

	@*kendo css - thema*@
	<link href="https://kendo.cdn.telerik.com/themes/6.4.0/bootstrap/bootstrap-main.css" rel="stylesheet" />

	<link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="/css/kendo-customize.css" asp-append-version="true" />

	<script>
		window.myApp = {};
		window.myApp.version = "1.0";

		document.addEventListener("DOMContentLoaded", function () {
			mnLang.prepare("@ViewBag.Culture");
			mnUser.prepare();
			mnApp.prepare();
			mnApp.setKendoDefaults("@ViewBag.Culture");

			mnNotification.prepare({ autoHideAfter: 3500 });

			if (mnUser.Info.IsAuthenticated) {
				mnYetkiSablon.prepare();
				mnLookup.prepare();
			}
		});

		window.addEventListener('load', function () {

			//window).resize
			setTimeout(function () {
				$(window).resize();
			});

			if (!window.location.host.startsWith("localhost")) {
				console.clear();
			}
			
		});

		function mapCallback() {
			//console.log("google maps api loaded.");
		}

	</script>
</head>
<body>
	@RenderBody()

	@*jquery JS*@
	<script src="https://kendo.cdn.telerik.com/2023.2.606/js/jquery.min.js"></script>

	@*Bootstrap JS (mnTreeMenu de kullanıldı)*@
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

	@*kendo js*@
	<script src="https://kendo.cdn.telerik.com/2023.2.606/js/kendo.all.min.js"></script>
	<script src="@Url.Content("https://kendo.cdn.telerik.com/2023.2.606/js/messages/kendo.messages." + ViewBag.Culture + ".min.js")"></script>
	<script src="@Url.Content("https://kendo.cdn.telerik.com/2023.2.606/js/cultures/kendo.culture." + ViewBag.Culture + ".min.js")"></script>

	@*jszip*@
	<script src="//cdnjs.cloudflare.com/ajax/libs/jszip/2.4.0/jszip.min.js"></script>

	@*Scroll  sanırım buna gerek kalmadı , aynı şeyi vanilya yapar hale gelmiş olabilir*@
	<script src="~/lib/slimScroll/jquery.slimscroll.min.js" asp-append-version="true"></script>

	@*mn*@
	<script src="~/lib/mn/mnAlert.js" asp-append-version="true"></script>
	<script src="~/lib/mn/mnLang.js" asp-append-version="true"></script>
	<script src="~/lib/mn/mnLibs.js" asp-append-version="true"></script>
	<script src="~/lib/mn/mnLookup.js" asp-append-version="true"></script>
	<script src="~/lib/mn/mnNotification.js" asp-append-version="true"></script>
	<script src="~/lib/mn/mnPageView.js" asp-append-version="true"></script>
	<script src="~/lib/mn/mnPopupView.js" asp-append-version="true"></script>
	<script src="~/lib/mn/mnScrollUp.js" asp-append-version="true"></script>
	<script src="~/lib/mn/mnSideBarMenu.js" asp-append-version="true"></script>
	<script src="~/lib/mn/mnYetkiSablon.js" asp-append-version="true"></script>

	@if (ViewBag.ControllerName != "Account")
	{
		<script async src="https://maps.google.com/maps/api/js?libraries=drawing&key=@ViewBag.GoogleMapApiKey&callback=mapCallback" defer></script>
	}

	@*components*@
	<script src="~/client/components/comp-google-map/comp-google-map.js" asp-append-version="true"></script>


</body>
</html>
