<!DOCTYPE html>
@{
    var AppVersion = "WebApp1.Codes.MyApp.Version";
    var AppCulture = ViewBag.Culture;
    var AppLanguage = ViewBag.Language;
}
<html lang="@AppLanguage">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CG - @ViewData["Title"]</title>

    
    @*font-awesome*@
    <link href="~/lib/font-awesome/css/font-awesome.min.css?@AppVersion" rel="stylesheet" />
    @*font-awesome-animation*@
    <link href="~/lib/font-awesome-animation/font-awesome-animation.min.css?@AppVersion" rel="stylesheet" />

    @*bootstrap CSS*@
    <link href="~/lib/bootstrap/4.6.0/css/bootstrap.min.css?@AppVersion" rel="stylesheet" />

    @*kendo css - thema - bootstrap-v4*@
    <link href="~/lib/kendo/styles/kendo.bootstrap-v4.min.css?@AppVersion" rel="stylesheet" />
    <link href="~/lib/my-style-bootstrap-v4.css?@AppVersion" rel="stylesheet" />

    @*jquery JS*@
    <script src="~/lib/kendo/js/jquery.min.js?@AppVersion"></script>

    @*Bootstrap JS (mnTreeMenu de kullanıldı)*@
    <script src="~/lib/bootstrap/4.6.0/js/bootstrap.bundle.min.js?@AppVersion"></script>

    @*kendo js*@
    <script src="~/lib/kendo/js/kendo.all.min.js?@AppVersion"></script>

    <script src="~/lib/kendo/js/kendo.aspnetmvc.min.js?@AppVersion"></script>
    <script src="@Url.Content("~/lib/kendo/js/messages/kendo.messages." + AppCulture + ".min.js?"+AppVersion)"></script>
    <script src="@Url.Content("~/lib/kendo/js/cultures/kendo.culture." + AppCulture + ".min.js?"+AppVersion)"></script>
    <link href="~/lib/kendo/styles/kendo.rtl.min.css?@AppVersion" rel="stylesheet" />

    @*mn*@
    <script src="~/lib/mn/mnNotification.js?@AppVersion"></script>

    <script>

        document.addEventListener("DOMContentLoaded", function () {
            //kendo
            kendo.culture("@AppCulture");
            mnNotification.prepare({ autoHideAfter: 3750 });
        });

        window.addEventListener('load', function () {
            //window).resize
            setTimeout(function () {
                $(window).resize();
            });
        });

    </script>

</head>
<body>
    @RenderBody()
</body>
</html>
